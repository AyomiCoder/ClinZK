{
  "name": "clinz-monorepo",
  "version": "1.0.0",
  "description": "ClinZK Monorepo - Client and Server",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build": "npm run build:server && npm run build:client",
    "start:server": "npm run start:prod --workspace=server",
    "start:server:dev": "npm run start:dev --workspace=server",
    "start:client": "npm run preview --workspace=client",
    "dev:client": "npm run dev --workspace=client",
    "install:all": "npm install",
    "lint:client": "npm run lint --workspace=client",
    "lint:server": "npm run lint --workspace=server",
    "lint": "npm run lint:server && npm run lint:client"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

